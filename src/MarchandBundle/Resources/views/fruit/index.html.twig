{% extends 'base.html.twig' %}

{% block body %}
    <h1>Fruits list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Prix</th>
                <th>Quantite</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for fruit in fruits %}
            <tr>
                <td><a href="{{ path('fruit_show', { 'id': fruit.id }) }}">{{ fruit.id }}</a></td>
                <td>{{ fruit.nom }}</td>
                <td>{{ fruit.prix }}</td>
                <td>{{ fruit.quantite }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('fruit_show', { 'id': fruit.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('fruit_edit', { 'id': fruit.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('fruit_new') }}">Create a new fruit</a>
        </li>
    </ul>
{% endblock %}
